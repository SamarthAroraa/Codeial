<link rel="stylesheet" href="/css/home.css" />
<div id="feed-container">
  <section id="right-section"></section>

  <section id="post-feed">
    <h4>Your Feed</h4>
    <% if(locals.user) {%>
    <form action="/posts/create" method="POST" id="new-post-form">
      <textarea
        name="content"
        id="textarea-np"
        cols="30"
        rows="3"
        placeholder="What's on your mind?..."
      ></textarea>
      <input type="submit" id="submit-button" value="Post" />
    </form>
    <% } %>
    <div id="posts-list-container">
      <ul>
        <% for(i of feed){ %> <%- include('_posts') -%> <% } %>
      </ul>
    </div>
  </section>
  <section id="user-list">
    <h4>Friends</h4>
    <ul>
      <% for(user of users){ %>
      <li><a href="/users/profile/<%= user._id %>"><%= user.name %></a></li>
      <% } %>
    </ul>
  </section>
</div>
<script src="/js/home-post.js"></script>
